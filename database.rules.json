{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["submittedBy/uid", "createdAt"]
    },
    "approvedReports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["submittedBy/uid", "createdAt"]
    },
    "rejectedReports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["submittedBy/uid", "createdAt"]
    },
    "lostPets": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["submittedBy/uid", "createdAt", "status"]
    },
    "foundPets": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["submittedBy/uid", "createdAt"]
    },
    "adoptionRequests": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["applicant/uid", "createdAt"]
    },
    "adoptions": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "donations": {
      ".read": "auth != null && auth.token.role === 'admin'",
      ".write": "true",
      ".indexOn": ["createdAt", "status", "method"]
    },
    "newsfeed": {
      ".read": "true",
      ".write": "auth != null",
      ".indexOn": ["createdAt", "isPinned"]
    },
    "pets": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["createdAt", "status"]
    }
  }
}
